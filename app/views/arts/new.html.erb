<%= simple_form_for [@art] do |f|%>
  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: "Name" %>
    <%= f.input :size, label: false, placeholder: "Size" %>
    <%= f.input :price, label: false, placeholder: "Price" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }, label: false, placeholder: "Choose photos" %>
    <div class="form-actions">
    <%= f.submit "Create", class: "btn-main" %>
  </div>
  </div>
<% end %>
